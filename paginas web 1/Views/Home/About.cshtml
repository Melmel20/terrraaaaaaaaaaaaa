@model PaginasWeb.Models.AboutViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://stackpath.bootstrap.com/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <title>Sobre Nós</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">TERRABYTES</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Home")">INICIO</a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("About", "Home")">SOBRE</a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Shop")">SHOP</a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Checkout")">CARRINHO</a></li>
            </ul>
        </div>
    </nav>

    <div class="container mt-5">
        <h2 class="text-center">@Model.ObjectiveTitle</h2>
        <div class="row">
            <div class="col-md-6">
                <img src="@Model.ObjectiveImageUrl" class="img-fluid" alt="Objective Image">
            </div>
            <div class="col-md-6">
                <p>@Model.ObjectiveText</p>
            </div>
        </div>
        <h2 class="text-center">@Model.FoodSafetyTitle</h2>
        <div class="row">
            <div class="col-md-6">
                <img src="@Model.FoodSafetyImageUrl" class="img-fluid" alt="Food Safety Image">
            </div>
            <div class="col-md-6">
                <p>@Model.FoodSafetyText</p>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.11.6/umd/popper.min.js" integrity="sha384-oBqDVmMz4fnFO9gybEv+e3v1mPzYg3E5h5R6CpgiSv5U60bxvFrG/FrJuhGXTW8z" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrap.com/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
