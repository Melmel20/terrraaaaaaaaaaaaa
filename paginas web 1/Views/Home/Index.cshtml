@model PaginasWeb.Models.HomeViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <title>Bem-vindo à TERRABYTES</title>
    <style>
        .banner {
            background: url('/images/banner.jpg') no-repeat center center;
            background-size: cover;
            height: 400px;
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
        }

            .banner h1 {
                font-size: 4em;
                text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);
            }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">TERRABYTES</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Home")">INICIO</a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("About", "Home")">SOBRE</a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Shop")">SHOP</a></li>
                <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Checkout")">CARRINHO</a></li>
            </ul>
        </div>
    </nav>

    <div class="banner">
        <div>
            <h1>Bem-vindo à TERRABYTES</h1>
            <p>Explorando o Futuro da Agricultura e Segurança Alimentar</p>
        </div>
    </div>

    <div class="container mt-5">
        <h2 class="text-center">Produtos em Destaque</h2>
        <div class="row">
            @foreach (var product in Model.FeaturedProducts)
            {
                <div class="col-md-4">
                    <div class="card mb-4">
                        <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name">
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">$@product.Price</p>
                            <a href="#" class="btn btn-primary">Ver Produto</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.11.6/umd/popper.min.js" integrity="sha384-oBqDVmMz4fnFO9gybEv+e3v1mPzYg3E5h5R6CpgiSv5U60bxvFrG/FrJuhGXTW8z" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
